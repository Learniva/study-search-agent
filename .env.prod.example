# Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# ==================== Core Configuration ====================
LLM_PROVIDER=gemini
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ==================== Security ====================
SECRET_KEY=CHANGE-ME-TO-A-SECURE-SECRET-KEY-IN-PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=30
TOKEN_EXPIRE_HOURS=24

# ==================== Database Configuration ====================
# Use managed database service in production (AWS RDS, Google Cloud SQL, etc.)
DATABASE_URL=postgresql://user:password@prod-db-endpoint:5432/grading_system
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_STATEMENT_TIMEOUT=30000
DB_CONNECTION_RETRIES=3

# ==================== Redis Configuration ====================
# Use managed Redis service in production (ElastiCache, Google Memory Store, etc.)
REDIS_URL=redis://prod-redis-endpoint:6379/0
REDIS_ENABLED=true

# ==================== API Keys ====================
# Get from Google AI Studio: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Enhanced web search capabilities
GOOGLE_SEARCH_API_KEY=your-google-custom-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
TAVILY_API_KEY=your-tavily-api-key

# ==================== Performance Configuration ====================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=60
MAX_CONTEXT_TOKENS=500
MAX_AGENT_ITERATIONS=5

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==================== Monitoring & Observability ====================
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ==================== Google Classroom Integration (Optional) ====================
GOOGLE_CLASSROOM_CREDENTIALS_FILE=credentials.json
GOOGLE_CLASSROOM_TOKEN_FILE=token.json

# ==================== Document Processing ====================
DOCUMENTS_DIR=documents
MAX_DOCUMENT_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ==================== Cache Configuration ====================
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ==================== Temperature Settings ====================
TEMP_STUDY=0.7
TEMP_GRADING=0.3
TEMP_ROUTING=0.0
TEMP_CREATIVE=0.9